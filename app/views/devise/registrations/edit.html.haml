= render("layouts/header")

%main.main
  .container
    - if resource.errors.any?
      .row
        .alert.alert-danger.mt-3{role: "alert"}
          = resource.errors.full_messages.first
    .row.justify-content-center
      .col-md-6
        .box
          .py-3.text-center
            %h2 Edit profile
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            .row.g-3
              .col-12
                = f.label :name, class: "form-label"
                = f.text_field :name, class: "form-control"
              .col-12
                = f.label :password, class: "form-label"
                = f.password_field :password, class: "form-control", autocomplete: "new-password"
                %small.text-muted
                  leave blank if you don't want to change it
              .col-12
                = f.label :password_confirmation, class: "form-label"
                = f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password"
              .col-12
                = f.label :current_password, class: "form-label"
                = f.password_field :current_password, class: "form-control", autocomplete: "current-password"
              - unless MatchDay.where("stop_bet_time > ?", Time.current).any?
                .col-12
                  = f.label "Winning team", for: :team_id, class: "form-label"
                  = f.select :team_id,
                             Team.all.map { |p| [p.name, p.id] },
                             { include_blank: true },
                             { class: "form-select", placeholder: "Select your winner" }
                .col-12
                  = f.label "Top scorer", for: :player_id, class: "form-label"
                  = f.select :player_id,
                             Player.all.map { |p| [p.name, p.id] },
                             { include_blank: true },
                             { class: "form-select", placeholder: "Select your top scorer" }
              .col-12.my-4
                = f.submit "Update", class: "btn btn-primary float-end"
